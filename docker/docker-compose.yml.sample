# This file was created automatically from docker-compose.yml.sample
version: '2'
services:
    backend:
        build: ./platform
        container_name: "AsyaPlatform"
        user: root
        ports:
            - "{{PLATFORM_PORT}}:80"
        links:
            - database
        depends_on:
            - database
        environment:
            DB_PASSWORD: 123456
        volumes:
            - ../logs:/var/log/nginx
            - ../platform:/app/platform

    database:
        image: mysql:latest
        container_name: "AsyaDatabase"
        restart: always
        environment:
            MYSQL_ROOT_PASSWORD: 123456
            MYSQL_DATABASE: asya
        volumes:
            - ../db:/var/lib/mysql