            <form class="" role="form">
                <div class="form-login form" data-type="login">
                    <img class="login-page__competition-logo" src="https://ctfcup.ru/img/partners/sibirctf.png" />

                    <div class="alert alert-danger message" role="alert" style="display: none;">Произошла ошибка</div>
