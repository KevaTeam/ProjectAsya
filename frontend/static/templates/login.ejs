<div class="row">
	<div class="col-md-4 login-bar">
		<form class="form-signin" role="form">
			<div class="form-login form" data-type="login">
			    <h2 class="form-signin-heading">Вход</h2>
			    <div class="alert alert-danger message" role="alert" style="display: none;">Произошла ошибка</div>
			    <div class="form-group">
			    	<label for="inputEmail" class="sr-only">Логин</label>
			    	<input type="text" id="inputEmail" class="form-control" placeholder="Логин" value="" autofocus>
			    </div>
			    
			    <div class="form-group">
			    	<label for="inputPassword" class="sr-only">Пароль</label>
			    	<input type="password" id="inputPassword" class="form-control" placeholder="Пароль" value="">
			    </div>
			    

			    <button class="btn btn-success" type="button" id="submit">Войти</button> <br />
			    <div class="border"></div>
			    <button class="btn btn-primary" type="button" id="button-signup">У меня нет аккаунта</button>
			    <button type="button" class="btn btn-default login-bar__scoreboard">
                  <span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Таблица результатов
                </button>
		    </div>
		    <div class="form-signup form" style="display: none;" data-type="signup">
			    <h2 class="form-signin-heading">Регистрация</h2>
			    <div class="alert alert-danger message" role="alert" style="display: none;">Произошла ошибка</div>


			    <div class="form-group">
			    	<label for="inputLogin" class="sr-only">Login</label>
			    	<input type="text" id="inputSignupLogin" class="form-control" placeholder="Введите логин" value="" name="inputSignupLogin" autofocus>
			    </div>
			    
			    <div class="form-group">
			    	<label for="inputEmail" class="sr-only">Email</label>
			    	<input type="text" id="inputSignupEmail" class="form-control" placeholder="Введите E-Mail" value="" name="inputSignupEmail" >
			    </div>

			    <div class="form-group">
			    	<label for="inputPassword" class="sr-only">Пароль</label>
			    	<input type="password" id="inputSignupPassword" class="form-control" placeholder="Введите пароль" value="" name="inputSignupPassword">
			    </div>

                <div class="form-group">
			    	<div class="input-group">
                        <input type="password" id="inputSignupToken" class="form-control" placeholder="Введите токен" value="" name="inputSignupToken">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">Нет токена</button>
                        </div>
                    </div>
                </div>
			    <button class="btn btn-primary" id="submit" type="button">Зарегистрироваться</button> <br />
			    <div class="border"></div>
			    <button class="btn btn-success" type="button" id="button-login">Назад ко входу</button>
		    </div>
		</form>
		 

	</div>
	<div class="col-md-8 scoreboard">
		<h1 class="text-center">Таблица результатов</h1>
		<table class="table table-hover">
		<tbody class="results">
		    <tr>
		        <th scope=row>1</th>
		        <td>Mark</td> <td>Otto</td>
		         <td>@mdo</td> </tr>
		         <tr> <th scope=row>2</th> <td>Jacob</td> <td>Thornton</td> <td>@fat</td> </tr> <tr> <th scope=row>3</th> <td>Larry</td> <td>the Bird</td> <td>@twitter</td> </tr> </tbody> </table>
	</div>
</div>

